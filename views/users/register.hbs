<div class="row justify-content-center">
    <div class="col-12 col-md-4">
        <h1 class="mb-3">Register</h1>
        <div class="card">
            <div class="card-body">
                        <form action="/register" method="post">        
                            {{!-- NAME --}}
                            <div class="input-group mb-1">
                                <span class="input-group-text"><i class="fa fa-fw fa-user"></i></span>
                                <input type="text" name="name" class="form-control {{#if errors.name}}is-invalid{{/if}}" placeholder="Name" aria-label="Name" value="{{ user.name }}">
                                {{#if errors.name}}<div class="invalid-feedback">{{ errors.name }}</div>{{/if}} 
                            </div>

                            {{!-- USERNAME --}}
                            <div class="input-group mb-1">
                                <span class="input-group-text"><i class="fa fa-fw fa-tag"></i></span>
                                <input type="text" name="username" class="form-control {{#if errors.username}}is-invalid{{/if}}" placeholder="Username"
                                aria-label="Name" value="{{ user.username }}">
                                {{#if errors.username}}<div class="invalid-feedback">{{ errors.username }}</div>{{/if}}
                            </div>

                            {{!-- EMAIL --}}
                            <div class="input-group mb-1">
                                <span class="input-group-text"><i class="fa fa-fw fa-envelope"></i></span>
                                <input type="email" name="email" class="form-control {{#if errors.email}}is-invalid{{/if}}"
                                placeholder="email" aria-label="Name" value="{{ user.email }}">
                                {{#if errors.email}}<div class="invalid-feedback">{{ errors.email }}</div>{{/if}}
                            </div>

                            {{!-- PASSWORD --}}
                            <div class="input-group mb-1">
                                <span class="input-group-text"><i class="fa fa-fw fa-lock"></i></span>
                                <input type="password" name="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" placeholder="password"
                                aria-label="Name">
                                {{#if errors.password}}<div class="invalid-feedback">{{ errors.password }}</div>{{/if}}
                            </div>

                            <div class="d-grid gap-2 mt-2">
                                <button type="submit" class="btn btn-warning">Register</button>
                            </div>
                        </form>
            </div>
        </div>
    </div>
</div>